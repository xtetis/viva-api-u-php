services:
  app:
    build:
      context: .
      dockerfile: Dockerfile.dev
    ports:
      - "8080:80"
    environment:
      - API_DB_HOST=vd-dbeis-vip.vd.ru #Хост базы данных (обязательный параметр)
      - API_DB_PORT=5432 #Порт базы данных (обязательный параметр)
